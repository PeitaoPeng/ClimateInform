cat > job.f << eof
      PROGRAM FILTER
      parameter(n=60)
      dimension c(n)
      tc=72 !tc=cutoff period
      dt=1
      fc=dt/tc
      CALL LANCZOS(FC,N,C)
      STOP
      END
      SUBROUTINE LANCZOS(FC,N,C)
      DIMENSION C(N)
      DATA PI/3.141592653/
      C(1)=2*FC
      DO k=1,N-1
        XNO=sin(2*pi*fc*k)*sin(pi*k/n)
        DNM=(pi*k)*(pi*k)/n
        C(k+1)=XNO/DNM
      ENDDO
      print 33,(c(k),k=1,n)
      write(80) c
  33  format(6x,'data c/',(f13.10,','))
      RETURN
      END
eof
f77 job.f
a.out
mv fort.80 Lcz_flt.data
\rm job.f a.out
