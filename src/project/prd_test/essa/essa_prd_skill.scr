#!/bin/sh

set -eaux

lcdir=/cpc/home/wd52pp/project/prd_test/essa
tmp=/cpc/home/wd52pp/tmp
datadir=/cpc/home/wd52pp/data/prd_test
#
last_yr=2012
longtime=82
ntprd=22  # ntprd=longtime-60
mrot=6
var=temp
ndec=6  # number of WMO clim
lag=10 #lag in SSA
#
cp $lcdir/essa_prd_skill.f $tmp/essaprd_skill.f
cp $lcdir/reof.s.f $tmp/reof.s.f
cp $lcdir/ssa.idx.s.f $tmp/ssa.s.f
cp $lcdir/CD102_2_2x2.s.f $tmp/CD102_2_2x2.s.f
cd $tmp
#
cat > parm.h << eof
       parameter(ltime=$longtime)
       parameter(imax=102)
       parameter(mmax=$mrot)
       parameter(mrot=$mrot)   !mode # to rotate
       parameter(ntprd=$ntprd)
       parameter(ndec=$ndec)  !# of wmo clim for the whole data length
       parameter(lag=$lag)
eof
#
gfortran -o essaprd_skill.x reof.s.f ssa.s.f CD102_2_2x2.s.f essaprd_skill.f
echo "done compiling"
#
/bin/rm $tmp/fort.*         
#
#
 ln -s /cpc/home/wd52pp/data/LF_prd/${var}_102.txt          fort.10
#
 ln -s $datadir/essa.acc_t.vs.cd_ss.gr    fort.61
 ln -s $datadir/essa.acc_s.vs.ss_t.gr     fort.62
 ln -s $datadir/essaprd_rpc.1961-$last_yr.gr   fort.63
#
essaprd_skill.x > $datadir/essaprd_skill.out
#
cat>$datadir/essa.acc_t.vs.cd_ss.ctl<<EOF
dset $datadir/essa.acc_t.vs.cd_ss.gr
UNDEF  -9999.0
TITLE skill
xdef   36 linear -130 2
ydef   19 LINEAR   20 2
zdef   1 linear 1  1
tdef 12 linear jan1991 1mo
vars   1
ac  0 99 from K(mode,ss,t)
endvars
EOF
#
cat>$datadir/essa.acc_s.vs.ss_t.ctl<<EOF
dset $datadir/essa.acc_s.vs.ss_t.gr
undef 999.0
title 1-d ac skill
xdef   1 linear  1  1
ydef   1 linear  1  1
zdef   1 linear 1  1
tdef   999 linear jan1991 1mo
vars   1
ac  0 99 from K(mode,ss,t)
endvars
EOF
#
cat>$datadir/essaprd_rpc.1961-$last_yr.ctl<<EOF2
dset $datadir/essaprd_rpc.1961-$last_yr.gr
undef 999.0
title Realtime Surface Obs
xdef    1 linear    0.000  1
ydef    1 linear    0.000  5
zdef    1 levels 500
tdef 999 linear jan1961 1yr
vars   16
p1   0 99 rpc1 of prd
v1   0 99 rpc1 of obs
p2   0 99 rpc2 of t2m
v2   0 99 rpc2 of t2m
p3   0 99 rpc3 of t2m
v3   0 99 rpc3 of t2m
p4   0 99 rpc4 of t2m
v4   0 99 rpc4 of t2m
p5   0 99 rpc5 of t2m
v5   0 99 rpc5 of t2m
p6   0 99 rpc6 of t2m
v6   0 99 rpc6 of t2m
p7   0 99 rpc6 of t2m
v7   0 99 rpc6 of t2m
p8   0 99 rpc6 of t2m
v8   0 99 rpc6 of t2m
endvars
EOF2
#
