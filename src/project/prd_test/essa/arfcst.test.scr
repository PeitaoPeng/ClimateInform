#!/bin/sh

set -eaux

lcdir=/cpc/home/wd52pp/project/prd_test/essa
datadir=/cpc/home/wd52pp/data/prd_test
tmp=/cpc/home/wd52pp/tmp

cp $lcdir/arfcst.s.f $tmp/arfcst.s.f
cp $lcdir/arfcst.test.f $tmp/arfcst.test.f
cd $tmp
\rm fort.*

gfortran -o armod.x arfcst.test.f arfcst.s.f

echo "done compiling"

 ln -s $datadir/arfcst.test.gr     fort.10

armod.x 

cat>$datadir/arfcst.test.ctl<<EOF
dset $datadir/arfcst.test.gr
undef 999.0
title 1-d ac skill
xdef   1 linear  1  1
ydef   1 linear  1  1
zdef   1 linear 1  1
tdef   999 linear jan1931 1mo
vars   2
o 0 99 "observed" ts
f 0 99 fcsted ts
endvars
EOF



