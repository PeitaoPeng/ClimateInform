 ln -s $datadir/${var}_82.$season.contrib.gr       fort.51
 ln -s $datadir/${var}_98.$season.contrib.gr       fort.52
#
rec.x
#
cat>$datadir/${var}_16.$season.contrib.ctl<<EOF
