#!/bin/sh

set -eaux

lcdir=/cpc/home/wd52pp/project/attr/win15-16
tmp=/cpc/home/wd52pp/tmp
datadir=/cpc/home/wd52pp/data/attr/win15-16
#
var=cmap
tmax=40 
nmod=10 
season=djf
#
cp $lcdir/contrib_cmap.f $tmp/rec.f
cd $tmp
#
cat > parm.h << eof
       parameter(ltime=$tmax)
       parameter(imx=144,jmx=72)
       parameter(nmod=$nmod)
eof
#
#
\rm $tmp/fort.*         
#
gfortran -o rec.x rec.f
echo "done compiling"

#
