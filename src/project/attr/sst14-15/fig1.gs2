'd pc1.2'
'set ccolor 2'
*'d pc2.2'
'run /cpc/home/wd52pp/bin/dline.gs 780 0 793 0'
'set string 1 tl 5 0'
'set strsiz 0.12 0.12'
*'draw string 'lx1' 'ly1' w.r.t. 1981-2010 clim'
'set string 2 tl 5 0'
*'draw string 'lx1' 'ly2' w.r.t. 1949-2014 clim'
endif
'set lon 0 360'
'set lat  -30 65'
'set yaxis -30 65 15'
if(iframe = 2)
