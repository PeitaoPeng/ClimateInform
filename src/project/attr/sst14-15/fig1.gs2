*
'open /cpc/home/wd52pp/data/attr/sst14-15/sst.had-oi.jan1949-cur.3mon.anom.ctl'
'open /cpc/home/wd52pp/data/attr/sst14-15/nino34.had-oi.feb1949-feb2015.3mon.ctl'
*
'set string 1 tc 5'
'set strsiz 0.15 0.15'
*'draw string 5.5 7.8 PSI200 2013-2015'
*---------------------------set dimsnesion, page size and style
nframe=2
nframe2=2
nframe3=2
xmin0=1.25;  xlen=6.;  xgap=0.5
ymax0=10; ylen=-2.0;  ygap=-0.75
*
iframe=1
while ( iframe <= nframe )
  icx=1; if (iframe > nframe2); icx=2; endif
  if (iframe > nframe3); icx=3; endif
  xmin=xmin0+(icx-1)*(xlen+xgap)
  xmax=xmin+xlen
  icy=iframe; if (iframe > nframe2); icy=iframe-nframe2; endif
  if (iframe > nframe3); icy=iframe-nframe3; endif
*  if (iframe = 2); ylen=-2.; ygap=-0.75; endif
*  if (iframe > 1); ylen=-2.; ygap=-0.05; endif
  ymax=ymax0+(icy-1)*(ylen+ygap)
  ymin=ymax+ylen
  tlx=xmin+0.
  tly=ymax+0.2
  lx1=xmin+0.5
  ly1=ymax-0.2
  ly2=ymax-0.4
  if (iframe = 2); tly=ymax+0.15; endif
  bx=4.25
  by=ymin-0.4
* say xmin; say xmax; say ymin; say ymax
  'set vpage 0 8.5 0 11'
  'set parea 'xmin' 'xmax' 'ymin' 'ymax
*
'set t 1'
*'set frame off'
'set grads off'
*'set grid off'
*'set map 15 1 2'
if(iframe = 1)
