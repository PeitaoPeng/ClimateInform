'cp1=cmp1'
'cp2=cmp5'
'cp3=frq1'
'cp4=frq5'
*
nframe=4
nframe2=2
nframe3=4
xmin0=0.5;  xlen=4.75;  xgap=0.5
ymax0=7.; ylen=-2.7;  ygap=-0.3
*
