 'set string 1 tc 4'
 'set strsiz 0.15 0.15'
 'draw string 5.5 8. $tgt_season Z200 Anom from ENSO Composite'
 'set string 4 tc 4'
 'set strsiz 0.15 0.15'
 'draw string 2.75 7.5 composite(M)'
 'draw string 8.25 7.5 frequency(%)'
 'draw string 5.5  7.05 Strong El Nino ($wstrong cases)'
 'draw string 5.5  4.05 Strong La Nina ($cstrong cases)'
