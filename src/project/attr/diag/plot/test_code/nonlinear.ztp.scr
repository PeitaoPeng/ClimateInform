var2=prec
var3=z200
#
season=djf
tgt_season=DJF
enso_ctg1="Moderate La Nina" 
enso_ctg2="Strong La Nina" 
#case numbers
wstrong=9
wweak=10
cweak=9
cstrong=9
#
cd $tmp
