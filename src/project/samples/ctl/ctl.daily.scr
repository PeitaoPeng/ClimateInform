#!/bin/sh
#

set -eaux
   
datadir=/cmb/d12/wd52pp/data/ncep_kana/hurr

filename=v850.aso
   
syr=1949
eyr=1950
yr=$syr
while [ $yr -le $eyr ] ; do
 
cat > $datadir/$filename$yr.ctl << EOF
dset ^$filename$yr.ieee
format yrev
UNDEF  -99999.0
TITLE kana amip run
*
XDEF 144  LINEAR 0 2.5
*
YDEF 73 LINEAR -90. 2.5     
*
ZDEF 01 LEVELS 1
*
TDEF 100 LINEAR 01AUG1950 1dy
*
*
VARS 1
z  01   99   hgt
ENDVARS
EOF

   yr=`expr $yr + 1`

done

exit
